{
  "compilerOptions": {
    "composite": true,          // required for references
    "noEmit": false,            // must allow emitting
    "outDir": "./dist",         // optional, but good to set
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
